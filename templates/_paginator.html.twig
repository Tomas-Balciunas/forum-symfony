<div class="flex justify-center items-center mt-6">
    {% if paginator.previousPage %}
        <a href="{{ path(path, {'id': id, 'page': paginator.previous}) }}" class="inline-block bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-500 transition duration-200 ease-in-out mr-2">
            Previous
        </a>
    {% endif %}

    {% for page in range(1, paginator.pages) %}
        <a href="{{ path(path, {'id': id, 'page': page}) }}" class="inline-block py-2 px-4 rounded-md {{ paginator.page == page ? 'bg-yellow-600 text-white' : 'bg-gray-600 text-gray-200' }} hover:bg-yellow-500 transition duration-200 ease-in-out mx-1">
            {{ page }}
        </a>
    {% endfor %}

    {% if paginator.nextPage %}
        <a href="{{ path(path, {'id': id, 'page': paginator.next}) }}" class="inline-block bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-500 transition duration-200 ease-in-out ml-2">
            Next
        </a>
    {% endif %}
</div>