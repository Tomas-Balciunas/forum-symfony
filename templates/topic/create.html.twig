{% extends 'base.html.twig' %}

{% block title %}New Topic{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 font-serif">
        <h4 class="text-3xl font-extrabold text-gray-100 mb-6">Create a New Topic</h4>

        <div class="bg-gray-800 p-6 shadow-lg border-4 border-gray-600 mb-6">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="space-y-4">
                    <div class="mb-6">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'text-lg text-gray-200 font-semibold'}}) }}
                        {{ form_widget(form.title, {
                            'attr': {
                                'class': 'w-full bg-gray-700 text-white border border-gray-600 py-3 px-4 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition'
                            }
                        }) }}
                        {% if form.title.vars.errors|length > 0 %}
                            <div>
                                {% for error in form.title.vars.errors %}
                                    <div class="text-red-400">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-6">
                        {{ form_label(form.body, null, {'label_attr': {'class': 'text-lg text-gray-200 font-semibold'}}) }}
                        {{ form_widget(form.body, {
                            'attr': {
                                'class': 'w-full bg-gray-700 text-white border border-gray-600 py-3 px-4 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition'
                            }
                        }) }}
                        {% if form.body.vars.errors|length > 0 %}
                            <div>
                                {% for error in form.body.vars.errors %}
                                    <div class="text-red-400">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mt-6">
                        <button type="submit" class="inline-block bg-indigo-600 text-white py-2 px-6 hover:bg-indigo-700 transition duration-200 ease-in-out">
                            Create Topic
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
