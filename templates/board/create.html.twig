{% extends 'base.html.twig' %}

{% block title %}Create board{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 font-serif">
        <h4 class="text-3xl font-extrabold text-gray-100 mb-6">Create a New Board</h4>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="bg-gray-800 p-6 shadow-lg border-4 border-gray-600">
            <!-- Title Field -->
            <div class="mb-4">
                {{ form_label(form.title, null, {'label_attr': {'class': 'text-lg font-medium text-gray-200'}}) }}
                <div class="mt-2">
                    {{ form_widget(form.title, {
                        'attr': {
                            'class': 'w-full bg-gray-700 text-white border border-gray-600 py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition duration-200 ease-in-out'
                        }
                    }) }}
                    {% if form.title.vars.errors|length > 0 %}
                        <div>
                            {% for error in form.title.vars.errors %}
                                <div class="text-red-400">{{ error.message }}</div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Description Field -->
            <div class="mb-4">
                {{ form_label(form.description, null, {'label_attr': {'class': 'text-lg font-medium text-gray-200'}}) }}
                <div class="mt-2">
                    {{ form_widget(form.description, {
                        'attr': {
                            'class': 'w-full bg-gray-700 text-white border border-gray-600 py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition duration-200 ease-in-out'
                        }
                    }) }}
                    {% if form.description.vars.errors|length > 0 %}
                        <div>
                            {% for error in form.description.vars.errors %}
                                <div class="text-red-400">{{ error.message }}</div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Access Field -->
            <div class="mb-4">
                {{ form_label(form.access, null, {'label_attr': {'class': 'text-lg font-medium text-gray-200'}}) }}
                <div class="mt-2">
                    {{ form_widget(form.access, {
                        'attr': {
                            'class': 'w-full bg-gray-700 text-white border border-gray-600 py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition duration-200 ease-in-out'
                        }
                    }) }}
                </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-6">
                <button type="submit" class="inline-block bg-yellow-600 text-white py-2 px-6 hover:bg-yellow-500 transition duration-200 ease-in-out">
                    Create Board
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
